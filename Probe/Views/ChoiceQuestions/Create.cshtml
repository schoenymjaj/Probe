@model Probe.Models.ChoiceQuestion

@{
    ViewBag.Title = "Create";
}

<h2>Question - Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ChoiceQuestion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationMessageFor(model => model.AspNetUsersId, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.QuestionType.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("QuestionTypeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuestionTypeId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                <div>The key to the question</div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                <div>The actual text of the question that will be displayed during the game. Note: The question mark does not need to be added here, it is added automatically during game time.  Attention: Be precise with your question. The smaller the text the better for mobile devices. Under 45 characters plays the best.</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OneChoice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.OneChoice, htmlAttributes: new { disabled ="disabled" } )
                    @Html.ValidationMessageFor(model => model.OneChoice, "", new { @class = "text-danger"})
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.AspNetUsersId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
