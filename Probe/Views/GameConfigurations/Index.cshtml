@using Probe.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*styles below accomplished word wrapping of header columns in MyGameConfigsGrid, but it didn't accomplish auto-column width*/
    .k-grid .k-grid-header .k-header .k-link {
        height: auto;
    }

    .k-grid .k-grid-header .k-header {
        white-space: normal;
    }

    /* ensure content wrapper is big enough for grid */
    .content-wrapper {
        max-width: 1200px;
    }

    .k-state-selected {
        background-color: #000000;
        border-color: #111111;
    }

    .gameconfigsGridCommandColumn { /*style grid command column*/
        padding-left: 3px;
        padding-right: 3px;
        width: 167px;
    }

    .gameconfigsGridCommandColumn .k-button { /*style all command buttons*/
        width: 79px;
    }

    .gameconfigsAutoCompleteSearch {
        color: blue;
        font-weight: bold;
    }

    #dialog-generalMessage {
        padding-bottom: 10px;
    }

    .dialog-generalButtons {
        padding-top: 15px;
        float: right;
    }

    #detailsTemplate-container td {
        padding-bottom: 10px;
        font-weight: normal;
    }

    .detailsHeader {
        font-weight: bold;
    }

    .detailsLabel {
        font-weight: bolder;
        color: #00edf0;
        vertical-align: top;
    }

    .noDisplay {
        display: none;
    }
</style>

<h2><i><b>@ViewBag.GameName</b></i> Game Configuration</h2>
<div style="vertical-align:text-bottom;padding-bottom:5px;margin:0px">

    @(Html.Kendo().AutoComplete()
    .Name("GameConfigAutoComplete") //The name of the autocomplete is mandatory. It specifies the "id" attribute of the widget.
    .IgnoreCase(true)
    .Placeholder("Enter search value for one configuration ...")
    .Filter("contains")
    .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetGameConfigsForAutoComplete", "GameConfigurations").Data("ReturnGameHandler"); //Set the Action and Controller name
            })
            .ServerFiltering(false); //If true the DataSource will not filter the data on the client.
        })
        .Events(e => e
            .Change("GameConfigAutocompleteChange")
        )
    )
    <div style="margin-bottom: 20px;float:right">
        @Html.ActionLink("Back to My Games", "Index", "Games")
    </div>
</div>


@(@Html.Kendo().Grid<Probe.Models.View.GameConfigurationDTO>().Name("MyGameConfigsGrid").Columns(c =>
        {
            c.Bound(g => g.ShortDescription).Title("Name");
            c.Bound(g => g.GroupName).Title("Group");
            c.Bound(g => g.DataTypeG).ClientTemplate("#= DisplayDataTypeG(data) #").Title("Type");
            c.Bound(g => g.Description).Title("Description");
            c.Bound(g => g.Value).Title("Value").Width(200);
            c.Command(cmd =>
                            {
                                cmd.Edit();
                                cmd.Custom("Details").Text("Details").Click("openDetails");
                            }).HtmlAttributes(new { @class = "gameconfigsGridCommandColumn" });
        })
        .DataSource(d => d
            .Ajax()
            .Model(model => model.Id(question => question.Id))
            .Sort(sort => sort.Add("Name").Ascending())
            .Read(r => r.Action("GetGameConfiguration", "GameConfigurations").Data("ReturnGameHandler"))
            .Update(u => u.Action("Update", "GameConfigurations"))
            .Group(groups => groups.Add(g => g.GroupName))
            .Events(events => events
                .Error("MyErrorHandler"))
        )
        .Pageable(page => page.PageSizes(new[] { 5, 10, 20, 50, 100 }))
        .Filterable()
        .Sortable()
        .Groupable()
        .Selectable()
        //edit mode popup - disable the lame canned delete confirmation window. Popup
        .Editable(ed => ed.Mode(GridEditMode.PopUp).TemplateName("GameConfiguration").Window(w => w.Title("Edit Configuration")))
        .Events(events =>
                {
                    events.DataBound("OnGridDataBound");
                    events.Edit("OnGridEdit");
                })   //Add event to attach event handlers to completely rendered grid
)

<div style="margin-top: 20px;float:left">
    @Html.ActionLink("Back to My Games", "Index", "Games")
</div>
<script>
    function ReturnGameHandler() {
        return {
            gameId: '@ViewBag.GameId'
        };
    }
</script>

<br />

<div id="dialog-details" title="Details" class="noDisplay"></div>
<div id="dialog-iframe" title="IFrame Play Preview" class="noDisplay"></div>
<div id="dialog-general" class="noDisplay">
    <div id="dialog-generalMessage"></div>
    <div id="dialog-generalMessage2"></div>
    <div class="dialog-generalButtons">
