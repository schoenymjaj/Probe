@model IEnumerable<Probe.Models.GameConfigurationDTO>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/Scripts/probe/probe-setup-tablesorter.js")"
        type="text/javascript"></script>

@functions{
    public bool IsGameActive(int? gameId)
    {
        bool returnStatus = true;
        if (gameId != null)
        {
            returnStatus = ViewBag.DctGameActive[(long)gameId];
        }
        else
        {
            returnStatus = false;
        }

        return returnStatus;
    }
}

<h2>Game Configuration Library</h2>

@using (Html.BeginForm())
{
    <p>
        Select Game: @Html.DropDownList("SelectedGame")
        <input type="submit" value="Filter" />
    </p>
}

<div>
    <table class="tablesorter">
        <thead>
            <tr>
                <th>
                    Game
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @if (!IsGameActive(ViewBag.SelectedGame.SelectedValue)) 
                        {@Html.ActionLink("Edit", "Edit", new { gameid = item.GameId, configurationGid = item.ConfigurationGId }) <span> | </span> }
                        @Html.ActionLink("Details", "Details", new { gameid = item.GameId, configurationGid = item.ConfigurationGId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Partial("TablesorterPager")
    <div style="margin-top: 20px">
        @Html.ActionLink("Back to Game List", "Index", "Games", new { SelectedGame = ViewBag.SelectedGame }, null)
    </div>
</div>
