
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*styles below accomplished word wrapping of header columns in MyPlayersGrid, but it didn't accomplish auto-column width*/
    .k-grid .k-grid-header .k-header .k-link {
        height: auto;
    }

    .k-grid .k-grid-header .k-header {
        white-space: normal;
    }

    /* ensure content wrapper is big enough for grid */
    .content-wrapper {
        max-width: 1200px;
    }

    .k-state-selected {
        background-color: #000000;
        border-color: #111111;
    }

    #dialog-generalMessage {
        padding-bottom: 10px;
    }

    .dialog-generalButtons {
        padding-top: 15px;
        float: right;
    }

    .detailsHeader {
        font-weight: bold;
    }

    .detailsLabel {
        font-weight: bolder;
        color: #00edf0;
    }

    .noDisplay {
        display: none;
    }
</style>


<h2>Games Admin</h2>

<h3>Clone Selected Game to Another User Account</h3>

@(Html.Kendo().DropDownList().Name("ProbeUserDropdown")
.OptionLabel("Select Desination User...")
.DataTextField("Text")
.DataValueField("Value")
.HtmlAttributes(new { style = "width:400px" })
.DataSource(source =>
            { source.Read(read => { read.Action("GetAllUsers", "Games"); }
                ); 
            })
)

<br />
<br />


@(Html.Kendo().DropDownList().Name("ProbeGameDropdown")
.OptionLabel("Select Group to Clone...")
.DataTextField("Text")
.DataValueField("Value")
.HtmlAttributes(new { style = "width:400px" })
.DataSource(source =>
            { source.Read(read => { read.Action("GetGames", "Games"); }
                ); 
            })
)

<br/>
<br/>
@(Html.Kendo().Button().Name("CloneToUserButton")
.Content("Clone")
.HtmlAttributes(new { style = "height: 25px;width:100px" })
.Events(e => e.Click("OnCloneToUserButtonClick"))
)

<div id="dialog-details" title="Details" class="noDisplay"></div>
<div id="dialog-iframe" title="IFrame Play Preview" class="noDisplay"></div>
<div id="dialog-general" class="noDisplay">
    <div id="dialog-generalMessage"></div>
    <div id="dialog-generalMessage2"></div>
    <div class="dialog-generalButtons">
        <button id="yesGen" class="k-button">OK</button>
        <button id="noGen" class="k-button">Cancel</button>
    </div>
</div>
<div id="dialog2-general" class="noDisplay">
    <div id="dialog2-generalMessage"></div>
    <div id="dialog2-generalMessage2"></div>
    <div class="dialog2-generalButtons">
        <button id="yesGen2" class="k-button">OK</button>
        <button id="noGen2" class="k-button">Cancel</button>
    </div>
</div>
<div id="dialog-progress" class="noDisplay" style="text-align:center">
    <div id="progressbar" style="width:80%"></div>
</div>
<div id='spinner'></div>

<script>

</script>

<script src="@Url.Content("~/Scripts/probe/gameadmin.js")"
        type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/probe/probe-ui-common.js")"
        type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/probe/probe-helpers.js")"
        type="text/javascript"></script>




