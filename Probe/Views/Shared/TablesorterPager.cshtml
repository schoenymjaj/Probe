<style>
    .tablesorter th {
        height: auto;
        font-size: 1.1em;
    }
</style>
<div id="pager" style="position: none;">
    <form>
        <img src="@Url.Content("~/Scripts/tablesorter/addons/pager/icons/first.png")" class="first" />
        <img src="@Url.Content("~/Scripts/tablesorter/addons/pager/icons/prev.png")" class="prev" />
        <input type="text" class="pagedisplay" />
        <img src="@Url.Content("~/Scripts/tablesorter/addons/pager/icons/next.png")" class="next" />
        <img src="@Url.Content("~/Scripts/tablesorter/addons/pager/icons/last.png")" class="last" />
        <select class="pagesize">
            <option selected="selected" value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
        </select>
    </form>
</div>
