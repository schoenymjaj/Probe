@model IEnumerable<Probe.Models.GameQuestion>

@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/Scripts/probe/probe-setup-tablesorter.js")"
        type="text/javascript"></script>

@functions{
    public bool IsGameActive(int? gameId)
    {
        bool status = true;
        if (gameId != null)
        {
            status = ViewBag.DctGameActive[(long)gameId];
        }
        else
        {
            status = true;
        }

        return status;
    }
}

<h2>My Game - Manage Questions</h2>

<p>
    @if (!IsGameActive(ViewBag.SelectedGame.SelectedValue))
    {
        @Html.ActionLink("Add Question", "Create", new { SelectedGame = ViewBag.SelectedGame.SelectedValue })
    }
    else
    {
        @:NOTE: Game is Ready-Only (A Game Play is Active for Game)
    }
</p>

@using (Html.BeginForm())
{
    <p>
        Select Game: @Html.DropDownList("SelectedGame")
        <input type="submit" value="Filter" />
    </p>
}

<div>
    <table class="tablesorter">
        <thead>
            <tr>
                <th>
                    Question Name
                </th>
                <th>
                    Question Text
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderNbr)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNbr)
                    </td>
                    <td>
                        @if (!IsGameActive(ViewBag.SelectedGame.SelectedValue)) {@Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span> | </span> } 
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                        @if (!IsGameActive(ViewBag.SelectedGame.SelectedValue)) { <span> | </span> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) }
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @Html.Partial("TablesorterPager")
</div>
