@helper ToolbarTemplate()
{
    <a class="k-button k-button-icontext k-grid-add" href="/Choices/Get?MyChoicesGrid-mode=insert"><span class="k-icon k-add"></span>Add new choice</a>
    <a class="k-button k-button-icontext k-grid-Preview" href="#"><span class="k-Preview"></span>Question Preview</a>
}
<script type="text/x-kendo-template" id="toolbarTemplate">
    @Html.Raw(@ToolbarTemplate().ToHtmlString().Replace("#", "\\#").Replace("</scr", "<\\/scr"))
</script>

<h2><i><b>@ViewBag.QuestionName</b></i> Choices</h2>
<div style="margin-bottom:5px;padding-bottom:10px;width:100%;overflow: auto">
    <div id="questionTextDiv">
        <span style="color:black">Question Text:</span> <i>@ViewBag.QuestionText</i>
    </div>
    <div id="backLinkDiv">
        <div style="margin:0px;float:right">
            @Html.ActionLink("Back to My Question Library", "Index", "ChoiceQuestions")
        </div>
    </div>
</div>

@(@Html.Kendo().Grid<Probe.Models.View.ChoiceDTO>().Name("MyChoicesGrid").Columns(c =>
        {
            c.Bound(g => g.Text).Title("Text of Choice");
            c.Bound(g => g.Correct).Title("Correct").ClientTemplate("#= DisplayCorrect(data) #").Width(40);
            c.Bound(g => g.OrderNbr).Title("Order").Width(40);            
            c.Command(cmd =>
                            {
                              cmd.Edit();
                              cmd.Custom("Delete").Click("openDeleteConfirm");
                            }).HtmlAttributes(new { @class = "choicesGridCommandColumn" });
        })
        .DataSource(d => d
            .Ajax()
            .Aggregates(aggregates =>
                {
                    aggregates.Add(a => a.OrderNbr).Max();
                })

            .Model(model => model.Id(choice => choice.Id))
            .Sort(sort => sort.Add("OrderNbr").Ascending())  //the sorting works, but by adding this code; stops the ability to create choices for some reason
            .Read(r => r.Action("GetQuestionChoices", "Choices").Data("ReturnQuestionHandler"))
            .Update(up => up.Action("Update", "Choices"))
            .Create(cr => cr.Action("Create", "Choices"))
            .Destroy(ds => ds.Action("Delete", "Choices"))
            .Events(events => events
                .Error("MyErrorHandler"))
        )
        .Pageable(page => page.PageSizes(new[] { 5, 10, 20, 50, 100 }))
        .Filterable()
        .Sortable()
        .Selectable()
        //edit mode popup - disable the lame canned delete confirmation window. Popup
        .Editable(ed => ed.Mode(GridEditMode.InLine).DisplayDeleteConfirmation(false))
        @*.ToolBar(t => t.Create().Text("Add new choice"))*@
        .ToolBar(toolbar =>
                        {
                            toolbar.Template(@<text>
                                @ToolbarTemplate()
                            </text>);
                        })
        .Events(events =>
                {
                    events.DataBound("OnGridDataBound");
                    events.Edit("OnGridEdit");
                })   //Add event to attach event handlers to completely rendered grid
)

<div style="margin-top: 20px;float:left">
    @Html.ActionLink("Back to My Question Library", "Index", "ChoiceQuestions")
</div>
<script>
    function ReturnQuestionHandler() {
        return {
            questionId: '@ViewBag.QuestionId'
        };
    }
</script>

